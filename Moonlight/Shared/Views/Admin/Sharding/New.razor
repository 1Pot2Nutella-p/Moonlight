@page "/admin/sharding/new"
@using Moonlight.App.Models.Forms
@using Moonlight.App.Repositories
@using Moonlight.App.Database.Entities

@inject NavigationManager NavigationManager

@inject Repository<ShardSpace> ShardSpaceRepository

<OnlyAdmin>
    <div class="card card-body p-10">
        <SmartForm Model="Model" OnValidSubmit="Submit">
            <label class="form-label">
                <TL>Name</TL>
            </label>
            <div class="input-group mb-5">
                <InputText @bind-Value="Model.Name" class="form-control"></InputText>
            </div>
            <div>
                <button type="submit" class="btn btn-primary float-end">
                    <TL>Create</TL>
                </button>
            </div>
        </SmartForm>
    </div>
</OnlyAdmin>

@code
{
    private NewShardSpaceDataModel Model = new();

    private Task Submit()
    {
        ShardSpaceRepository.Add(new()
        {
            Name = Model.Name
        });
        
        NavigationManager.NavigateTo("/admin/sharding");
        
        return Task.CompletedTask;
    }
}